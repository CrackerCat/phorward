# Script:		pinclude
# Author:		Jan Max Meyer
# Usage:		Local include resolver
#-------------------------------------------------------------------------------

if [ $# -lt 1 ]
then
	echo "usage: $0 <filenames>"
	exit 1
fi

echo "/*"
echo "	This file was automatically generated by `basename $0`."
echo "	Source files: $*"
echo "*/"
echo

while [ "$1" != "" ]
do
	awk '

BEGIN				{	FS = "[ \t\"]+"		}

/#include[ \t]+\"/	{
						if( !system( "test -f " $2 ) )
						{
							print "/* include $2 */"
							system( "cat " $2 )
						}
						else
						{
							print "pinclude: File not found: " $2
							exit 1
						}
						next
					}

					{
						print
					}
	' $1 | premcomments

	if [ $? -ne 0 ]
	then
		exit 1
	fi

	shift
done

